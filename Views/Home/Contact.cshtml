@{
    ViewBag.Title = "Contact";
    ViewBag.Message = "We are here to help you!";
}
<main aria-labelledby="page-title" class="contact-page">
    <header class="contact-header">
        <h1 id="page-title">@ViewBag.Title</h1>
        <p class="contact-message">@ViewBag.Message</p>
    </header>

    <section class="contact-section">
        <h2 class="contact-subtitle">Our Address</h2>
        <address class="contact-address">
            Town Hall<br />
            NSW, Australia<br />
            <abbr title="Phone">P:</abbr> <a href="tel:4255550100">425.555.0100</a>
        </address>
    </section>

    <section class="contact-section">
        <h2 class="contact-subtitle">Business Hours</h2>
        <p class="business-hours">
            <strong>Monday - Friday:</strong> 9:00 AM - 6:00 PM<br />
            <strong>Saturday:</strong> 10:00 AM - 4:00 PM<br />
            <strong>Sunday:</strong> Closed
        </p>
    </section>

    <section class="contact-section">
        <h2 class="contact-subtitle">Contact Emails</h2>
        <address class="contact-emails">
            <p><strong>Support:</strong> <a href="mailto:Support@example.com">Support@example.com</a></p>
            <p><strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a></p>
        </address>
    </section>

    <section class="contact-section">
        <h2 class="contact-subtitle">Find Us</h2>
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3311.087463246481!2d151.20699061521092!3d-33.87365298065624!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b12a3374b080f0d%3A0x5017d681632b8e0!2sTown%20Hall%2C%20Sydney%20NSW%202000%2C%20Australia!5e0!3m2!1sen!2sus!4v1623166351887!5m2!1sen!2sus" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </section>

    <section class="contact-section">
        <h2 class="contact-subtitle">Contact Form</h2>
        <form class="contact-form">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="submit-button">Submit</button>
        </form>
    </section>
</main>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
        color: #333;
    }

    h1, h2, h3 {
        font-family: 'Open Sans', sans-serif;
        font-weight: 700;
        color: #333;
    }

    h1 {
        font-size: 2.5em;
        margin-bottom: 10px;
    }

    h2 {
        font-size: 1.8em;
        margin-bottom: 10px;
    }

    h3 {
        font-size: 1.5em;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1em;
        color: #555;
        line-height: 1.6;
    }

    .contact-page {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        background: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 30px;
        padding: 20px;
        border-radius: 8px;
    }

        .contact-header h1 {
            font-size: 2.5em;
            color: #333;
        }

    .contact-message {
        font-size: 1.2em;
        color: #777;
    }

    .contact-section {
        margin-bottom: 30px;
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .contact-subtitle {
        font-size: 1.8em;
        color: #333;
        margin-bottom: 10px;
        border-bottom: 2px solid #007bff;
        display: inline-block;
        padding-bottom: 5px;
    }

    .contact-address, .contact-emails, .business-hours {
        font-size: 1.1em;
        color: #555;
        line-height: 1.6;
    }

        .contact-address a, .contact-emails a {
            color: #007bff;
            text-decoration: none;
        }

            .contact-address a:hover, .contact-emails a:hover {
                text-decoration: underline;
            }

    .contact-form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

        .form-group input, .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

    .submit-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
    }
